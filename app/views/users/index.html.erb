<h1>Users</h1>
<%= link_to 'New User', new_user_path %>
<br/>
<table>
	<tr>
		<th>Username</th>
		<th>Permission Level</th>
		<th></th>
		<th></th>
		<th></th>
	</tr>
	<% @users.each do |user| %>
		<tr>
			<td><%= user.username %></td>
			<td><%= user.level.capitalize %></td>
			<td><%= link_to 'Show', user %></td>
			<td><%= link_to 'Edit', edit_user_path(user) %></td>
			<td><a class="rails-delete" data-link="/users/delete/<%= user.id %>">Destroy</a></td>
		</tr>
	<% end %>
</table>