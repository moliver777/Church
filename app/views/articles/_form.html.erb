<%= form_for(@article) do |f| %>
	<% if @article.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>
			<ul>
				<% @article.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	<table>
		<tr>
			<th>Date</th>
			<td><%= f.text_field :date %></td>
		</tr>
		<tr>
			<th>Category</th>
			<td><%= f.text_field :category %></td>
		</tr>
		<tr>
			<th>Title</th>
			<td><%= f.text_field :filename, :onchange => "checkFilename(this)" %></td>
		</tr>
		<tr>
			<th>Upload Article</th>
			<td><%= f.file_field :article_file %></td>
		</tr>
	</table>
	<div class="actions">
		<%= f.submit %>
	</div>
<% end %>