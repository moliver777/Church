<h1>Articles</h1>
<br/>
<table>
	<tr>
		<th>File</th>
		<th></th>
		<th></th>
		<th></th>
		<th></th>
	</tr>
	<% @articles.each do |article| %>
		<tr>
			<td><%= article.filename %>.<%= article.original_filename.split(".").last %></td>
			<td><a href="/download/<%= article.filename %>.<%= article.original_filename.split(".").last %>">Download</a></td>
			<td><%= link_to 'Show', article %></td>
			<td><%= link_to 'Edit', edit_article_path(article) %></td>
			<td><a class="rails-delete" data-link="/articles/delete/<%= article.id %>">Destroy</a></td>
		</tr>
	<% end %>
</table>
<br />
<%= link_to 'New Article', new_article_path %>