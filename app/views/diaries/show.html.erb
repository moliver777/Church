<p id="notice"><%= notice %></p>
<table class="show">
	<tr>
		<th>Title</th>
		<td><%= @diary.title %></td>
	</tr>
	<tr>
		<th>Date</th>
		<td><%= @diary.date %></td>
	</tr>
	<tr>
		<th>Content</th>
		<td><%= @diary.text %></td>
	</tr>
	<% @diary.images.each_with_index do |image,i| %>
		<tr>
			<th>Image <%= i+1 %></th>
			<td><img class="thumb" src="/image/<%= image.id %>" /></td>
		</tr>
	<% end %>
</table>
<%= link_to 'Edit', edit_diary_path(@diary) %> |
<%= link_to 'Back', diaries_path %>