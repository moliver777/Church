source 'http://rubygems.org'
ruby '2.6.3'

gem 'rails', '5.2.3'
gem 'jquery-rails'

# PostgreSQL database and activerecord querying
gem 'pg', '0.18'
gem 'activerecord'
gem 'activerecord-session_store'

# Encryption
gem 'aes'

# XML
gem 'nokogiri'
gem 'nori'

# Pagination
gem 'kaminari'

# Gems used only for assets and not required in production environments by default
group :assets do
  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier'
end

# Use mysql2 for local development
group :development do
  gem 'mysql2', '0.5.3'
end

# Use postgresql for production heroku
group :production do
  gem "pg"
end
